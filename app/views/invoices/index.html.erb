<div class="page-header">
  <div class="media">
    <div class="media-left media-middle">
      <%= image_tag('invoices.png', class: 'media-object') %>
    </div>
    <div class="media-body">
      <h1 class="media-heading">Invoices</h1>
      <h5 class="media-heading"><%= page_entries_info @invoices %></h5>
      <ul class="list-inline">
        <li>
          <%= link_to new_invoice_path do %>
            <%= fa_icon 'file-text', text: ' New Invoice' %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
  <div class="pull-right">
    <small>
      <em class="text-muted">Search on invoice number or description</em>
    </small>
    <%= form_tag invoices_path, method: :get, class: 'form-inline', data: {validate: true}, remote: true do %>
      <div class="form-group">
        <%= text_field_tag :q, params[:q], class: 'input-sm form-control', placeholder: 'Search', autocomplete: :off, data: {rule_minlength: 3, rule_required: true} %>
        <span rel="tooltip" title="Clear Search"><%= link_to image_tag("close.png"), invoices_path %></span>
      </div>
    <% end %>
  </div>
</div>
<div id="invoices">
  <% if @invoices.total_count.zero? %>
    <div class="jumbotron">
      <p class="lead">
        This screen will show a listing of all your invoices loaded.
          <br/>
        But at the moment, you don't have any...
          <%= image_tag('sadface.png', size: '15x15') %>
        Let's fix that right away!
        </p>
      <p>
        <strong>Why don't we get started:</strong>
      </p>
      <h2>
        <%= link_to new_invoice_path do %>
          <%= fa_icon 'file-text', text: ' New invoice' %>
        <% end %>
      </h2>
    </div>
  <% else %>
    <%= render 'invoices/invoices', invoices: @invoices %>
  <% end %>
</div>
