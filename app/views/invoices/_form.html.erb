<%= form_for(@invoice) do |f| %>
  <% if @invoice.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
      <% @invoice.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<br>
  <div class="field">
    <%= f.label :client_id %>
    <%= f.collection_select(:client_id, Client.for_user(current_user.id), :id, :business_name, {:prompt => 'Select a Client'}) %> <a href="<%= new_client_path %>">&nbsp;(or Add Client)</a>	
  </div>
  <div class="field">
    <%= f.label :due_date %>
	<%= f.text_field :due_date, :databehaviour => 'datepicker', :placeholder => 'Select Invoice Due Date' %>
  </div>
  <div class="field">
    <%= f.label :amount %>
    <%= f.text_field :amount %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :invoice_number %>
    <%= f.text_field :invoice_number %>
  </div>

  <div class="field">
    <%= f.label "Status" %>
    <%= f.collection_select(:status_id, Status.find(:all), :id, :description ) %> 
  </div>

  <hr class="bs-docs-separator">

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

