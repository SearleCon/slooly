- cache invoice do
  .page-header
    .media
      .pull-left
        =image_tag('invoices.png', class: 'media-object')
      .media-body
        h1 Invoice Details
        h3=invoice.invoice_number
        = link_to invoices_path do
          = fa_icon 'arrow-left', text: 'Back'

  p Invoice For: #{strong(link_to invoice.client_business_name, invoice.client)}
  p Invoice Number: #{invoice.invoice_number}
  p Due Date: #{invoice.due_date}
  p Amount: #{invoice.amount}
  p Status: #{invoice.status}
  p Description: #{invoice.description}

  - if @invoice.chasing?
    hr
    .media
      .pull-left
        =image_tag('calendarbig.png', class: 'media-object')
      .media-body
        h4 Reminder Email Dates for Invoice #{invoice.invoice_number}:
        ol
          li Pre-Due Reminder (if applicable):Â #{strong invoice.pd_date }
          li First Overdue Reminder: #{strong invoice.od1_date}
          li Second Overdue Reminder: #{strong invoice.od2_date}
          li Third Overdue Reminder: #{strong invoice.od3_date}

hr
ul.inline
  li= link_to  edit_invoice_path(invoice) do
    = fa_icon 'edit', text: ' Edit this invoice'
  li= link_to new_invoice_path do
    = fa_icon 'file-text-o', text: ' Add another invoice'
