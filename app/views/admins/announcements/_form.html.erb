<%= form_for([:admins, @announcement]) do |f| %>
  <%= f.form_group :headline do %>
    <%= f.label :headline %>
    <%= f.text_field :headline, required: true, class: 'form-control' %>
    <%= f.errors_for :headline %>
  <% end %>
  <%= f.form_group :description do %>
    <%= f.label :description %>
    <%= f.text_area :description, required: true, class: 'form-control' %>
    <%= f.errors_for :description %>
  <% end %>
  <%= f.form_group :posted_by do %>
    <%= f.label :posted_by %>
    <%= f.text_field :posted_by, required: true, class: 'form-control' %>
    <%= f.errors_for :posted_by %>
  <% end %>
  <%= f.submit 'Save', class: 'btn btn-primary btn-sm' %>
<% end %>
