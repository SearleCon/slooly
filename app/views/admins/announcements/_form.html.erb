<%= form_for([:admins, @announcement]) do |f| %>
  <div class="form-group">
    <%= f.label :headline %>
    <%= f.text_field :headline, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :posted_by %>
    <%= f.text_field :posted_by, class: 'form-control' %>
  </div>
  <%= f.submit 'Save' %>
<% end %>
