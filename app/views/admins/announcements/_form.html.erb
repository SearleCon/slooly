<%= form_for([:admins, @announcement]) do |f| %>
    <div class="control-group">
      <%= f.label :headline, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :headline %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :description, class: 'control-label' %>
      <div class="controls">
        <%= f.text_area :description %>
      </div>
    </div>
    <div class="control-group">
      <%= f.label :posted_by, class: 'control-label' %>
      <div class="controls">
        <%= f.text_field :posted_by %>
      </div>
    </div>
    <%= f.submit 'Save' %>
<% end %>
