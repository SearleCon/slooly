<div class='page-header'>
  <h1><%= image_tag('user.png') %> <%= "Edit #{@user.name} subscription" %></h1>
  <%= link_to admins_user_path(@user) do %>
    <%= fa_icon 'arrow-left', text: 'Back' %>
  <% end %>
</div>
<%= form_for [:admins, @user, @subscription] do |f| %>
  <%= f.form_group :expiry_date do %>
    <%= f.label :expiry_date %>
    <%= f.text_field :expiry_date, required: true, value: f.object.expiry_date.to_date.strftime('%d %B %Y'), class: 'form-control datepicker' %>
    <%= f.errors_for :expiry_date %>
  <% end %>
  <%= f.submit 'Extend Subscription', class: 'btn btn-primary btn-sm' %>
<% end %>
