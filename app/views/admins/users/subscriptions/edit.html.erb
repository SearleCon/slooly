<div class='page-header'>
  <h1><%= image_tag('user.png') %> <%= "Edit #{@user.name} subscription" %></h1>
  <%= link_to admins_user_path(@user) do %>
    <%= fa_icon 'arrow-left', text: 'Back' %>
  <% end %>
</div>
<%= form_for [:admins, @user, @subscription], html: { data: { validate: true } } do |f| %>
  <div class='form-group'>
    <%= f.label :expiry_date %>
    <%= f.text_field :expiry_date, value: f.object.expiry_date.to_date.strftime('%d %B %Y'), class: 'form-control datepicker' %>
  </div>
  <%= f.submit 'Extend Subscription', class: 'btn btn-primary btn-sm' %>
<% end %>
