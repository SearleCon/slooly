<h2>Sign up</h2>
<%= render "devise/shared/links" %>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {honeypot: true}) do |f| %>
  <%= f.form_group :name %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.errors_for :name %>
  <% end %>
  <%= f.form_group %>
    <%= f.label :email %>
    <%= f.email_field :email, class: 'form-control' %>
    <%= f.errors_for :email %>
  <% end %>
  <%= f.form_group %>
    <%= f.label :password %>
    <%= f.password_field :password, autocomplete: :off, class: 'form-control' %>
    <%= f.errors_for :password %>
  <% end %>
  <%= f.form_group %>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation, autocomplete: :off, class: 'form-control' %>
    <%= f.errors_for :password_confirmation %>
  <% end %>
  <%= f.form_group %>
    <%= f.time_zone_select :time_zone, nil, { include_blank: true, prompt: 'Select your time zone'}, {class: 'form-control'} %>
  <% end %>
  <div class="checkbox">
    <%= f.label :terms_of_service, class: 'checkbox' do %>
      <%= (f.check_box :terms_of_service) + "I accept and agree to the #{link_to 'Terms of Service', tos_path}".html_safe %>
      <%= f.errors_for :terms_of_service %>
    <% end %>
  </div>
  <%= f.submit 'Sign Up', class: 'btn btn-primary btn-sm' %>
<% end %>
