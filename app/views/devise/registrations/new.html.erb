<h2>Sign up</h2><br>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :honeypot => true }) do |f| %>
  <%= devise_error_messages! %>
<div><%= f.label :name %>
<%= f.text_field :name %></div>

  <div><%= f.label :email %>
  <%= f.email_field :email %></div>

  <div><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div><br>

  <%= f.check_box :terms_of_service %>&nbsp; 
  I accept and agree to the <%= link_to "Terms of Service", tos_path %> <br><br><br>

  <%= f.submit 'Sign Up', class: 'btn btn-primary' %>

<% end %>

<%= render "devise/shared/links" %>

