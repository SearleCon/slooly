<%= link_to "Paying Mantis - Get paid on time!", root_path, class: 'brand' %>
<ul class="nav pull-right">
  <li>
    <%= link_to 'Home', root_path %>
  </li>
  <li>
    <%= link_to_if(session[:current_admin].present?, "Back to Admin Page", impersonation_path('revert'), method: :delete) {} %>
  </li>
  <% if user_signed_in? %>
    <li class="<%= 'active' if current_page?(clients_path) %>">
      <%= link_to 'Clients', clients_path %>
    </li>
    <li class="<%= 'active' if current_page?(invoices_path) %>">
      <%= link_to 'Invoices', invoices_path %>
    </li>
    <li class="<%= 'active' if current_page?(new_client_path) %>">
      <%= link_to 'Add Client', new_client_path %>
    </li>
    <li class="<%= 'active' if current_page?(new_invoice_path) %>">
      <%= link_to 'Add Invoice', new_invoice_path %>
    </li>
    <li class="<%= 'active' if current_page?(reports_path) %>">
      <%= link_to 'Reports', reports_path %>
    </li>
    <li class="dropdown" id="fat-menu">
      <a class="dropdown-toggle" data-toggle="dropdown" href="#">
        <%= "Account (#{current_user.name})" %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to "Settings", settings_path %>
        </li>
        <li><%= link_to "User Profile", edit_user_registration_path %>
        </li>
        <li><%= link_to "Company Profile", company_path %>
        </li>
        <li><%= link_to "Help", tutorial_path %>
        </li>
        <li class="divider"></li>
        <li><%= link_to 'Logout', destroy_user_session_path, method: :delete %>
        </li>
      </ul>
    </li>
  <% else %>
    <li><%= link_to 'Sign up', new_user_registration_path %>
    </li>
    <li><%= link_to 'Pricing', pricing_path %>
    </li>
    <li><%= link_to 'About', about_path %>
    </li>
    <li><%= link_to 'Contact', new_contact_path %>
    </li>
    <li><%= link_to "News", announcements_path %>
    </li>
    <li><%= link_to 'Login', new_user_session_path %></li>
  <% end %>
</ul>
