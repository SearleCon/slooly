<div class="page-header">
  <h1>Plans</h1>
</div>

<table class="table table-condensed table-bordered">
  <tr>
    <th>Description</th>
    <th>Duration</th>
    <th>Cost</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%= plan.description %></td>
    <td><%= pluralize(plan.duration, 'Month') %></td>
    <td><%= number_to_currency(plan.cost) %></td>
    <td><%= boolean_to_words(plan.active) %></td>
    <td><%= link_to 'Show', plan %></td>
    <td><%= link_to 'Edit', edit_plan_path(plan) %></td>
    <td><%= link_to 'Destroy', plan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Plan', new_plan_path %>
