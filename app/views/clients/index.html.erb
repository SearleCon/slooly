<!-- SS Search box -->
<div class="header form-search" align="right">
<%= search_form_for @q do |f| %>
  <p>
    <%= f.search_field :business_name_or_contact_person_cont, class: "input-medium search-query", placeholder: "Search clients" %>
    <% if @q.conditions.any? %>
        <span rel="tooltip" title="Clear Search"><%= link_to image_tag("close.png"), clients_path %></span>
    <% end %>
  </p>
<% end %>
</div>

<%= image_tag('clients.png', class: 'header') %><h1>Clients</h1>

<%= render "search_client_results" if @q.conditions.any? %>

<h4 align="right">( <%= @clients.total_entries %> in total )</h4>

<% if current_user.clients.empty? %>
	  <%= render("no_records") %>
<% else %>
<table class="table">
  <tr>
    <%= content_tag :th, sort_link(@q, :business_name, 'Business Name') %>
    <%= content_tag :th, sort_link(@q, :contact_person, 'Contact Person') %>
    <%= content_tag :th, sort_link(@q, :telephone, 'Telephone') %>
    <%= content_tag :th, sort_link(@q, :email, 'Email') %>
    <%= content_tag :th, sort_link(@q, :created_at, 'Created') %>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  <%= render @clients %>
</table>

<div class="flickr_pagination">
<div class="page_info">
</div>
  <%= will_paginate @clients, container: false %>
</div>

<hr class="bs-docs-separator">

<%= link_to 'New Client', new_client_path %>

<% end %>
