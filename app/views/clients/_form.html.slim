= form_for @client, html: { data: { validate: true } } do |f|
  .row
    .span5
      .control-group
        = f.label :business_name, class: 'control-label'
        .controls
          - if @client.new_record?
            = f.text_field :business_name, autofocus: true, data: { rule_required: true, rule_remote: exists_clients_url, msg_remote: 'A client with this business name already exists.' }, placeholder: 'Business name'
          - else
            = f.text_field :business_name, autofocus: true, placeholder: 'Business name'
      .control-group
        = f.label :email, class: 'control-label'
        .controls
          = f.email_field :email, data: {rule_email: true, rule_required: true}, placeholder: 'Email'
      .control-group
        = f.label :contact_person, class: 'control-label'
        .controls
          = f.text_field :contact_person, placeholder: 'Contact person'
      .control-group
        = f.label :address, class: 'control-label'
        .controls
          = f.text_field :address, placeholder: 'Address'
      .control-group
        = f.label :city, class: 'control-label'
        .controls
          = f.text_field :city, placeholder: 'City'
      .control-group
        = f.label :post_code, class: 'control-label'
        .controls
          = f.text_field :post_code, label: 'Zip / Post Code', placeholder: 'Post code'
      .control-group
        = f.label :telephone, class: 'control-label'
        .controls
          = f.telephone_field :telephone, placeholder: 'Telephone'
      .control-group
        = f.label :fax, class: 'control-label'
        .controls
          = f.telephone_field :fax, placeholder: 'Fax'
    .span6.well
      .media
        .pull-left
          =image_tag('tip.png', class: 'media-object')
        .media-body
          h3.media-heading Notes:
          ul
            li=simple_format("<strong>Email:</strong> The clients email address is the most important item on this page. Make sure to enter it correctly, as all the reminder emails will be sent to this address.")
            li=simple_format("<strong>Other:</strong> The Business name, Contact Person, Address, City and Post code will appear on the reminder email for the client.")

  hr
  = f.submit 'Save Client', class: 'btn btn-primary'