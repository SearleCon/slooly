<%= form_for @client do |f| %>
  <div class="row">
    <div class="col-md-5">
      <%= f.form_group :business_name do %>
        <%= f.label :business_name %>
        <%= f.text_field :business_name, autofocus: true, required: true, placeholder: 'Business name', class: 'form-control' %>
        <%= f.errors_for :business_name %>
      <% end %>
      <%= f.form_group :email do %>
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'Email', required: true, class: 'form-control' %>
        <%= f.errors_for :email %>
      <% end %>
      <%= f.form_group :contact_person do %>
        <%= f.label :contact_person %>
        <%= f.text_field :contact_person, placeholder: 'Contact person', class: 'form-control' %>
      <% end %>
      <%= f.form_group :address do %>
        <%= f.label :address %>
        <%= f.text_field :address, placeholder: 'Address', class: 'form-control' %>
      <% end %>
      <%= f.form_group :city do %>
        <%= f.label :city %>
        <%= f.text_field :city, placeholder: 'City', class: 'form-control' %>
      <% end %>
      <%= f.form_group :post_code do %>
        <%= f.label :post_code %>
        <%= f.text_field :post_code, label: 'Zip / Post Code', placeholder: 'Post code', class: 'form-control' %>
      <% end %>
      <%= f.form_group :telephone do %>
        <%= f.label :telephone %>
        <%= f.telephone_field :telephone, placeholder: 'Telephone', class: 'form-control' %>
      <% end %>
      <%= f.form_group :fax do %>
        <%= f.label :fax %>
        <%= f.telephone_field :fax, placeholder: 'Fax', class: 'form-control' %>
      <% end %>
    </div>
    <div class="col-md-6">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">
            <%= image_tag('tip.png') %>
            Notes
          </h3>
        </div>
        <div class="panel-body">
          <ul class="list-unstyled">
            <li>
              <%= simple_format("<strong>Email:</strong> The clients email address is the most important item on this page. Make sure to enter it correctly, as all the reminder emails will be sent to this address.") %>
            </li>
            <li>
              <%= simple_format("<strong>Other:</strong> The Business name, Contact Person, Address, City and Post code will appear on the reminder email for the client.") %>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <%= f.submit 'Save client', class: 'btn btn-primary btn-sm' %>
<% end %>
