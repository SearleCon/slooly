<%= form_for @settings, url: settings_path do |f| %>
  <ul class="nav nav-pills nav-stacked col-md-2">
    <li class="active">
      <a data-toggle="tab" href="#general">General</a>
    </li>
    <li>
      <a data-toggle="tab" href="#predue">Pre-Due Reminder</a>
    </li>
    <li>
      <a data-toggle="tab" href="#due">Due Reminder</a>
    </li>
    <li>
      <a data-toggle="tab" href="#od1">Overdue Reminder 1</a>
    </li>
    <li>
      <a data-toggle="tab" href="#od2">Overdue Reminder 2</a>
    </li>
    <li>
      <a data-toggle="tab" href="#od3">Overdue Reminder 3</a>
    </li>
    <li>
      <a data-toggle="tab" href="#fd">Final Demand</a>
    </li>
  </ul>
  <div class="tab-content col-md-10">
    <div class="tab-pane fade in active" id="general">
      <div class="row">
        <div class="col-md-5">
          <div class="form-group">
            <%= f.label :send_from_name %>
            <%= f.text_field :send_from_name, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :email_copy_to %>
            <%= f.email_field :email_copy_to, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :days_between_chase %>
            <%= f.number_field :days_between_chase, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :days_before_pre_due %>
            <%= f.number_field :days_before_pre_due, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :payment_method_message %>
            <%= f.text_area :payment_method_message, class: 'form-control', rows: 20 %>
          </div>
          <%= f.submit 'Save your Settings', class: 'btn btn-primary btn-sm' %>
        </div>
        <div class="col-md-5">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">
                <%= image_tag('tip.png') %>
                Notes
            </h3>
            </div>
            <div class="panel-body">
              <ul class="list-unstyled">
                <li><%= simple_format("<strong>Send From Name:</strong> This name will be used at the end of the reminder email.") %>
                </li>
                <li><%= simple_format("<strong>Email Copy To:</strong> A copy of the reminder emails will be sent to this email address as well as the clients (For example, send a copy to yourself, or your credit control clerk for your records etc. (The client will

                               not see this email address") %>
                </li>
                <li><%= simple_format("<strong>Days Between Chase:</strong> The number of days between the reminder emails (Default starts 7 days from the due date)") %>
                </li>
                <li><%= simple_format("<strong>Days Before Pre-Due:</strong> The number of days before the due date that the pre-due reminder email will be sent (Default is 2 days before the due date)") %>
                </li>
                <li><%= simple_format("<strong>Payment Method Message:</strong> This will appear on the bottom of your reminder emails, and it is very important to make sure your correct banking details and other payment methods are displayed here, as it is what
                the
                client will use to make the payment.") %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="predue">
      <div class="row">
        <div class="col-md-5">
          <div class="checkbox">
            <%= f.label :pre_due_reminder, class: 'checkbox' do %>
              <%= (f.check_box :pre_due_reminder) + 'Send pre due reminder' %>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :pre_due_subject %>
            <%= f.text_field :pre_due_subject, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :pre_due_message %>
            <%= f.text_area :pre_due_message, class: 'form-control', rows: 20 %>
          </div>
          <%= f.submit 'Save your Settings', class: 'btn btn-primary btn-sm' %>
        </div>
        <div class="col-md-5">
          <div class="panel panel-info">
            <div class="panel-heading">
              <h3 class="panel-title">
                <%= image_tag('tip.png') %>
                Notes
            </h3>
            </div>
            <div class="panel-body">
              <ul class="list-unstyled">
                <li><%= simple_format("<strong>Pre-Due Reminder Checkbox:</strong> Uncheck this to NOT send a pre-due reminder message (Default is on).") %>
                </li>
                <li><%= simple_format("<strong>Pre-Due Subject:</strong> This will be used as the subject line of the pre-due reminder email.") %>
                </li>
                <li><%= simple_format("<strong>Pre-Due Message:</strong> This will be used as the message body for the pre-due reminder email.") %>
                </li>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="due">
      <div class="row">
        <div class="col-md-5">
          <div class="checkbox">
            <%= f.label :due_reminder, class: 'checkbox' do %>
              <%= (f.check_box :due_reminder) + 'Send due reminder' %>
            <% end %>
          </div>
          <div class="form-group">
            <%= f.label :due_subject %>
            <%= f.text_field :due_subject, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :due_message %>
            <%= f.text_area :due_message, class: 'form-control', rows: 20 %>
          </div>
          <%= f.submit 'Save your Settings', class: 'btn btn-primary btn-sm' %>
