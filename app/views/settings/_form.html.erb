            <%= f.label :pre_due_reminder_email_message %>
            <%= f.text_area :pre_due_reminder_email_message, class: 'form-control', rows: 20 %>
          <% end %>
          <%= f.submit 'Save your Settings', class: 'btn btn-primary btn-sm' %>
        </div>
        <div class="col-md-5">
          <div class="panel panel-info">
            <div class="panel-heading">
